<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.team.mvc.Interface.IAdminBoardUpdateDAO">

    <resultMap id="boardUpdate" type="com.team.mvc.DTO.AdminBoardUpdateDTO">
        <result property="boardId" column="게시판ID" />
        <result property="categoryName" column="카테고리명" />
        <result property="adminGrade" column="관리등급" />
        <result property="boardName" column="게시판" />
    </resultMap>

    <resultMap id="labelUpdate" type="com.team.mvc.DTO.AdminBoardUpdateDTO">
        <result property="labelId" column="말머리ID" />
        <result property="boardId" column="게시판ID" />
        <result property="boardName" column="게시판" />
        <result property="labelName" column="말머리" />
    </resultMap>



    <select id="getBoardList" resultMap="boardUpdate">
        SELECT
            BOA.BOARD_ID AS "게시판ID"
                      , BC.BOARD_CATE_NAME AS "카테고리명"
                      , WG.WRITE_GRADE_NAME AS "관리등급"
                      , BOA.BOARD_NAME AS "게시판"
        FROM BOARD BOA
                 JOIN BOARD_CATEGORY BC
                      ON BOA.BOARD_CATE_ID = BC.BOARD_CATE_ID
                 JOIN WRITE_GRADE WG
                      ON BOA.WRITE_GRADE_ID = WG.WRITE_GRADE_ID
    </select>

    <select id="getLabelList" resultMap="labelUpdate">
        SELECT PL.POST_LABEL_ID AS "말머리ID"
             , BOA.BOARD_ID AS "게시판ID"
             , BOA.BOARD_NAME AS "게시판"
             , PL.POST_LABEL_NAME AS "말머리"
        FROM POST_LABEL PL
                 JOIN BOARD BOA
                      ON PL.BOARD_ID = BOA.BOARD_ID
    </select>
</mapper>