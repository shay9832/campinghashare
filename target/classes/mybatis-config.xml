<?xml version="1.0" encoding="UTF-8" ?>
<!-- 2. MyBatis 기본 설정 파일
 src/main/resources/mybatis-config.xml -->

<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN" "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
    <settings>
        <!-- 카멜케이스 매핑 설정 (DB 컬럼명 user_id -> 자바 필드명 userId로 자동 매핑) -->
        <setting name="mapUnderscoreToCamelCase" value="true"/>

        <!-- 쿼리 결과가 null일 때도 컬럼을 포함시킴 -->
        <setting name="callSettersOnNulls" value="true"/>

        <!-- 쿼리 파라미터 또는 결과 필드가 null이면 JDBC 타입을 NULL로 설정 -->
        <setting name="jdbcTypeForNull" value="NULL"/>

        <!-- SQL 로깅 설정 (개발 시에만 STDOUT으로 설정, 운영 시에는 NO_LOGGING 권장) -->
        <setting name="logImpl" value="STDOUT_LOGGING" />
    </settings>

    <!-- 자주 사용하는 타입에 대해 별칭 설정 -->
    <typeAliases>
        <!-- 패키지 내의 모든 클래스를 클래스명을 별칭으로 사용 -->
        <package name="com.team.mvc.entity"/>
    </typeAliases>

    <!-- 타입 핸들러 등록 (예: Java8 시간 API와 오라클 DATE 타입 간 변환) -->
    <typeHandlers>
        <typeHandler handler="org.apache.ibatis.type.LocalDateTimeTypeHandler"
                     javaType="java.time.LocalDateTime"
                     jdbcType="TIMESTAMP"/>
    </typeHandlers>
</configuration>